<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/row_rif_fattura"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="1dp"
		android:layout_marginRight="1dp"
		android:layout_marginTop="1dp"
		android:background="@drawable/pressed_item"
		android:orientation="vertical" >

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="4dp"
			android:text="@string/row_rif_fattura"
			android:textColor="@android:color/black"
			android:textSize="18sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/tv_row_rif_fattura"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="4dp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/row_rif_scontrino"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="1dp"
		android:layout_marginLeft="1dp"
		android:layout_marginRight="1dp"
		android:layout_marginTop="1dp"
		android:background="@drawable/pressed_item"
		android:orientation="vertical" >

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="4dp"
			android:text="@string/row_rif_scontrino"
			android:textColor="@android:color/black"
			android:textSize="18sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/tv_row_rif_scontrino"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="4dp" />
	</LinearLayout>

</LinearLayout>