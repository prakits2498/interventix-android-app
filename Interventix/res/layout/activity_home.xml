<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:context=".IndexActivity"
        >
    <ImageView
            android:clickable="false"
            android:contentDescription="@string/logo_"
            android:id="@+id/view_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:layout_width="159dp"
            android:longClickable="false"
            android:maxHeight="60dp"
            android:maxWidth="159dp"
            android:src="@drawable/logo_ix"/>

    <Button
            android:background="@drawable/back"
            android:id="@+id/btn_exit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:minHeight="30dp"
            android:minWidth="30dp"/>
    <Button android:background="@drawable/cover"
            android:id="@+id/btn_refresh"
            android:layout_alignBaseline="@id/btn_exit"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/view_logo"
            android:layout_toRightOf="@id/btn_exit"
            android:layout_width="wrap_content"
            android:minHeight="30dp"
            android:minWidth="30dp"></Button>
    <Button
            android:background="@drawable/add"
            android:id="@+id/btn_addInterv"
            android:layout_alignBaseline="@id/btn_exit"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:minHeight="30dp"
            android:minWidth="30dp"/>
    <TextView
            android:gravity="left"
            android:hint="@string/nomin_interv"
            android:id="@+id/label_nominativo"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/view_logo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="4dp"
            android:textIsSelectable="false"/>
    <ListView android:id="@+id/list_interv_assigned"
              android:layout_below="@id/label_nominativo"
              android:layout_height="match_parent"
              android:layout_marginTop="4dp"
              android:layout_width="match_parent">
    </ListView>
</RelativeLayout>
