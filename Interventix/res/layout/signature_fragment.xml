<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_summary_intervention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/signature_content_description" />

    <LinearLayout
        android:id="@+id/layout_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/brush"
                android:layout_width="0dip"
                android:layout_height="64dp"
                android:layout_weight="1"
                svgimageview:svg="brush.svg" />

            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/eraser"
                android:layout_width="0dip"
                android:layout_height="64dp"
                android:layout_weight="1"
                svgimageview:svg="eraser.svg" />
        </LinearLayout>

        <com.federicocolantoni.projects.interventix.utils.DrawingView
            android:id="@+id/signature_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>