<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	<TextView
		android:id="@+id/tv_summary_intervenion"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:textStyle="bold" />
	<include
		android:id="@+id/row_client"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/interv_row" />
	<include
		android:id="@+id/row_user"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/interv_row" />
	<include
		android:id="@+id/row_informations"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/interv_row" />
	<include
		android:id="@+id/row_details"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/interv_row" />
	<include
		android:id="@+id/row_costs"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/interv_row" />
	<include
		android:id="@+id/row_signature"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		layout="@layout/interv_row" />
</LinearLayout>