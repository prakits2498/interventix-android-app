<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.federicocolantoni.projects.interventix"
	android:versionCode="11"
	android:versionName="0.1.20" >
	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_LOGS" />
	<application
		android:name="Interventix"
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:vmSafeMode="true" >
		<activity
			android:name="com.federicocolantoni.projects.interventix.core.MainActivity"
			android:configChanges="orientation"
			android:label="@string/app_name"
			android:screenOrientation="portrait" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.federicocolantoni.projects.interventix.core.HomeActivity"
			android:configChanges="orientation"
			android:label="@string/title_activity_index"
			android:screenOrientation="portrait" >
		</activity>
		<activity
			android:name="com.federicocolantoni.projects.interventix.core.MyInterventionsActivity"
			android:configChanges="orientation"
			android:label="@string/title_activity_my_interventions"
			android:screenOrientation="portrait" >
		</activity>
		<activity
			android:name=".settings.SettingActivity"
			android:configChanges="orientation"
			android:screenOrientation="portrait" />
		<activity
			android:name=".settings.SettingSupportActivity"
			android:configChanges="orientation"
			android:screenOrientation="portrait" >
		</activity>
		<provider
			android:name="com.federicocolantoni.projects.interventix.data.InterventixProvider"
			android:authorities="com.federicocolantoni.projects.interventix"
			android:exported="false" >
		</provider>
		<service
			android:name="com.federicocolantoni.projects.interventix.service.InterventixService"
			android:exported="false" >
		</service>
	</application>
</manifest>