<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.federicocolantoni.projects.interventix"
    android:versionCode="43"
    android:versionName="0.0.430" >

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name="Interventix"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:vmSafeMode="true" >
        <activity
            android:name="com.federicocolantoni.projects.interventix.core.MainActivity_"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.federicocolantoni.projects.interventix.core.HomeActivity_"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.federicocolantoni.projects.interventix.core.ViewInterventoActivity_"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value="com.federicocolantoni.projects.interventix.core.HomeActivity" /> -->
        </activity>
        <activity
            android:name=".settings.SettingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".settings.SettingSupportActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.federicocolantoni.projects.interventix.modules.login.SearchResultsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name="com.federicocolantoni.projects.interventix.data.InterventixProvider"
            android:authorities="com.federicocolantoni.projects.interventix"
            android:exported="false" >
        </provider>
    </application>

</manifest>