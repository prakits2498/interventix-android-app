<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff"
	tools:context=".IndexActivity" >
	<ImageView
		android:id="@+id/view_logo"
		android:layout_width="159dp"
		android:layout_height="60dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:clickable="false"
		android:contentDescription="@string/logo_"
		android:longClickable="false"
		android:maxHeight="60dp"
		android:maxWidth="159dp"
		android:src="@drawable/logo_ix" />
	<Button
		android:id="@+id/btn_addInterv"
		android:layout_width="245dp"
		android:layout_height="57dp"
		android:layout_below="@id/view_logo"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="46dp"
		android:text="@string/add_interv" />
	<Button
		android:id="@+id/btn_exit"
		android:layout_width="245dp"
		android:layout_height="57dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="20dp"
		android:text="@string/exit" />
	<Button
		android:id="@+id/btn_myInterv"
		android:layout_width="245dp"
		android:layout_height="57dp"
		android:layout_alignLeft="@id/btn_addInterv"
		android:layout_below="@id/btn_addInterv"
		android:text="@string/my_interv" />
	<TextView
		android:id="@+id/label_nominativo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="16dp"
		android:layout_toRightOf="@id/view_logo"
		android:gravity="center"
		android:textIsSelectable="false" />
</RelativeLayout>